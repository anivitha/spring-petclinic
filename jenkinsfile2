node{
   stage('SCM Checkout'){    
       git credentialsId: 'git-creds', url: 'https://github.com/kishan428/spring-petclinic.git'  
   }
   stage('Mvn Package'){   
     def mvnHome = tool name: 'maven-3', type: 'maven'
     def mvnCMD = "${mvnHome}/bin/mvn"
     sh "${mvnCMD} clean package"
   }
   stage('Build Docker Image'){
       sh 'docker build -t suresha10/spring-petclinic:2.0.0 .'
   }
   stage('Push Docker Image'){
     withCredentials([usernameColonPassword(credentialsId: 'dockerHubPwd', variable: 'dockerHubPwd')]) {
        sh "docker login -u suresh10 -p ${dockerHubPwd}"
     }
     sh 'docker push suresh10/spring-petclinic:2.0.0'
   }
   stage('deploy k8s pods'){
      sh 'cp /root/workspace/ci-cd-docker-kubernetes/spring-deployment.yaml  /root/spring-deployment.yaml'
      sh 'cd /root'
      sh 'kubectl apply -f spring-deployment.yaml'
   }
}
